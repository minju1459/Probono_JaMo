<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peterpan_inculdebg">


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="229dp"
        android:layout_height="206dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/speechballoontrans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="105dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/katuri"
        android:text="ã…‚"
        android:textColor="#000000"
        android:textSize="87dp"
        app:layout_constraintStart_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton3" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="543dp"
        android:layout_height="453dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299"
        app:srcCompat="@drawable/photobox" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="385dp"
        android:layout_height="319dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/sound_btn"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21"
        app:layout_constraintVertical_bias="0.255"
        app:srcCompat="@drawable/watermelon" />

    <ImageButton
        android:id="@+id/sound_btn"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintEnd_toEndOf="@+id/imageView22"
        app:layout_constraintStart_toStartOf="@+id/imageView22"
        app:srcCompat="@drawable/speaker" />

    <ImageButton
        android:id="@+id/true_btn"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginEnd="416dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/false_btn"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@+id/false_btn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/yesicon" />

    <ImageButton
        android:id="@+id/false_btn"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/true_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        app:layout_constraintVertical_bias="0.265"
        app:srcCompat="@drawable/noicon" />


</androidx.constraintlayout.widget.ConstraintLayout>