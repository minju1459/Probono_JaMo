<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/st_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:scaleType="centerCrop"
        android:src="@drawable/main_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:fontFamily="@font/katuri"
        android:text="어린왕자"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/st_background"
        app:layout_constraintEnd_toEndOf="@+id/themeButton1"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/themeButton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />

    <ImageButton
        android:id="@+id/themeButton1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/theme1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/nextbtn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="250dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/here_btn"
        app:layout_constraintBottom_toBottomOf="@+id/themeButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toEndOf="@+id/backbtn1"
        app:layout_constraintTop_toTopOf="@+id/themeButton1"
        app:layout_constraintVertical_bias="0.47" />

    <ImageButton
        android:id="@+id/backbtn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="490dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/here_btn2"
        app:layout_constraintBottom_toBottomOf="@+id/themeButton1"
        app:layout_constraintEnd_toStartOf="@+id/nextbtn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/themeButton1"
        app:layout_constraintVertical_bias="0.439" />

</androidx.constraintlayout.widget.ConstraintLayout>

