<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_back"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="1014dp"
            android:layout_height="180dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/katuri"
            android:gravity="center|center_vertical"
            android:text="               1.단어 파악"
            android:textSize="50dp" />

        <ImageButton
            android:id="@+id/skipword"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/skipicon" />

    </LinearLayout>


    <TextView
        android:id="@+id/Testnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/katuri"
        android:gravity="center"
        android:text="TextView"
        android:textSize="20dp" />

    <ProgressBar
        android:layout_marginTop="30dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/wordprogress" />

    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/katuri"
        android:paddingTop="40sp"
        android:text="문제 들어갈 자리"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/start_speak"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginLeft="505dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mic" />

        <Button
            android:id="@+id/button10"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="185dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FFEB3B"
            android:fontFamily="@font/katuri"
            android:text="단어 보기"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/next_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginLeft="850dp"
            android:layout_marginTop="20dp"
            android:background="#C34EA339"
            android:fontFamily="@font/katuri"
            android:text="다음 문제"
            android:textColor="#000000"
            android:textSize="30dp"
            app:backgroundTint="#E04EA339"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/chart"
            app:strokeColor="@color/black" />

    </LinearLayout>

</LinearLayout>