<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trans_lpphonics">

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="251dp"
        android:layout_height="169dp"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left" />


    <TextView
        android:id="@+id/textView25"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:layout_marginStart="244dp"
        android:layout_marginBottom="164dp"
        android:fontFamily="@font/katuri"
        android:text="소리 버튼을 눌러\n주어진 문장을 잘 듣고\n\n이 버튼을 눌러\n문장을 따라읽어본 후\n다시 버튼을 눌러 멈춰보세요!"
        android:textColor="@color/black"
        android:lineSpacingMultiplier="1.3"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView39" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="285dp"
        android:layout_height="90dp"
        android:layout_gravity="right"
        android:background="#FFFFFF"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="@font/katuri"
        android:text="이제 시작해볼까요?"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />
</androidx.constraintlayout.widget.ConstraintLayout>