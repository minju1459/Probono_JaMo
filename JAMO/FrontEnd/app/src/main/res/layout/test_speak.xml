<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_back"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="1014dp"
            android:layout_height="180dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/katuri"
            android:gravity="center|center_vertical"
            android:text="               4.말하기"
            android:textSize="50dp" />

        <ImageButton
            android:id="@+id/skipspeak"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/skipicon" />

    </LinearLayout>

    <TextView
        android:id="@+id/problem"
        android:layout_width="949dp"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:fontFamily="@font/katuri"
        android:lineSpacingMultiplier="1.5"
        android:paddingTop="40sp"
        android:text="문제 들어갈 자리"
        android:textColor="@color/black"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/start_speak"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mic" />

        <ImageButton
            android:id="@+id/stop_speak"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mic_strp" />


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:background="#C34EA339"
        android:fontFamily="@font/katuri"
        android:text="다음 문제"
        android:textColor="#000000"
        android:textSize="30dp"
        app:backgroundTint="#E04EA339"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/chart"
        app:strokeColor="@color/black" />

</LinearLayout>