<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="#EDF4A8">

    <Button
        android:id="@+id/progress_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/katuri"
        android:text="훈련 진행도"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/correctRate_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/menu_buttons"

        android:fontFamily="@font/katuri"
        android:text="훈련 정답률"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/progress_btn"
        app:layout_constraintTop_toBottomOf="@+id/progress_btn" />

    <Button
        android:id="@+id/doTest_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/menu_buttons"

        android:fontFamily="@font/katuri"
        android:text="진단검사하기"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/correctRate_btn"
        app:layout_constraintTop_toBottomOf="@+id/correctRate_btn" />

    <Button
        android:id="@+id/logout_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/katuri"
        android:text="로그아웃"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/doTest_btn"
        app:layout_constraintTop_toBottomOf="@+id/doTest_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>